<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dialog_spacing_large"
        android:layout_marginTop="@dimen/dialog_spacing_large"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/margin_1"
        android:paddingRight="@dimen/margin_1"
        android:textColor="@color/black"
        android:textSize="@dimen/text_h_4"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dialog_spacing_large"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_1"
        android:paddingRight="@dimen/margin_1">

        <com.vasomedical.spinetracer.fragment.analytics.diagnosis.MultiChoiceUnit
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:answerOption="heroin" />

        <com.vasomedical.spinetracer.fragment.analytics.diagnosis.MultiChoiceUnit
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:answerOption= "other_opiates" />

        <com.vasomedical.spinetracer.fragment.analytics.diagnosis.MultiChoiceUnit
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:answerOption="cocaine" />

        <com.vasomedical.spinetracer.fragment.analytics.diagnosis.MultiChoiceUnit
            android:id="@+id/option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:answerOption="benzodiazepines" />

        <com.vasomedical.spinetracer.fragment.analytics.diagnosis.MultiChoiceUnit
            android:id="@+id/option5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:answerOption="amphetamines" />

        <com.vasomedical.spinetracer.fragment.analytics.diagnosis.MultiChoiceUnit
            android:id="@+id/option6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:answerOption="alcohol" />

        <com.vasomedical.spinetracer.fragment.analytics.diagnosis.MultiChoiceUnit
            android:id="@+id/option7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:answerOption="none_of_above"
            app:isNoneOfAbove="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:orientation="horizontal" />


</LinearLayout>