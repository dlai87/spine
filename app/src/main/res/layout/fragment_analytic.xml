<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/invalid_detection_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <com.vasomedical.spinetracer.util.widget.textView.NJTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_2"
            android:text="@string/invalid_detection_data" />

        <com.vasomedical.spinetracer.util.widget.button.NJButton
            android:id="@+id/re_test_button"
            android:layout_width="@dimen/button_w_4"
            android:layout_height="@dimen/button_h_6"
            android:text="@string/re_test"
            android:textColor="@color/njbutton_white"
            android:textStyle="bold" />


    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <!-- chart -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="脊柱段图"/>

            <com.github.rongi.rotate_layout.layout.RotateLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:angle="270">

                <!-- should rotate 90 / 270 -->

                <com.github.mikephil.charting.charts.BubbleChart
                    android:id="@+id/bubbleChartSpineSegment"
                    android:layout_width="@dimen/img_chart_w"
                    android:layout_height="@dimen/img_chart_w"
                    android:background="@android:color/white"
                    />

            </com.github.rongi.rotate_layout.layout.RotateLayout>


            <TextView
                android:id="@+id/cobbs_angle_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>