<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <Button
            android:id="@+id/previous_button"
            android:layout_width="@dimen/button_h_5"
            android:layout_height="@dimen/button_h_5"
            android:background="@drawable/icon_next"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:gravity="center"
        android:orientation="vertical">

        <com.vasomedical.spinetracer.util.widget.textView.NJTextView
            android:id="@+id/real_time_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_marginBottom="@dimen/margin_1"
            android:text="0Â°"
            android:textSize="@dimen/text_h_huge"
            android:textColor="@color/text_gray_dark"
            android:textStyle="bold"
            />

        <com.vasomedical.spinetracer.util.widget.button.NJButton
            android:id="@+id/control_button"
            android:layout_width="@dimen/button_w_0"
            android:layout_height="@dimen/button_h_6"
            android:layout_marginTop="@dimen/margin_0"
            android:text="@string/start"
            android:textColor="@color/white"
            android:textSize="@dimen/text_h_5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/next_button"
            android:layout_width="@dimen/button_h_5"
            android:layout_height="@dimen/button_h_5"
            android:background="@drawable/icon_next"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>