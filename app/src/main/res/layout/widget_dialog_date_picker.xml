<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <LinearLayout
        android:id="@+id/alert_dialog_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_1"
        android:paddingLeft="@dimen/margin_2"
        android:paddingRight="@dimen/margin_2"
        android:paddingTop="@dimen/margin_1">

        <com.vasomedical.spinetracer.util.widget.textView.NJTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/text_gray_dark"
            android:textSize="@dimen/text_h_4" />

        <com.vasomedical.spinetracer.util.widget.textView.NJTextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_1"
            android:layout_marginTop="@dimen/margin_1"
            android:gravity="center"
            android:text="Test Test Test"
            android:textColor="@color/text_gray_dark"
            android:textSize="@dimen/text_h_5" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <DatePicker
                android:id="@+id/date_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:calendarViewShown="false"
                android:layout_marginBottom="@dimen/margin_1"
                android:layout_marginLeft="@dimen/margin_0"
                android:layout_marginRight="@dimen/margin_0"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <com.vasomedical.spinetracer.util.widget.button.NJButton
                    android:id="@+id/button1"
                    android:layout_width="@dimen/button_w_6"
                    android:layout_height="@dimen/button_h_6"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_h_5" />

                <com.vasomedical.spinetracer.util.widget.button.NJButton
                    android:id="@+id/button2"
                    android:layout_width="@dimen/button_w_6"
                    android:layout_height="@dimen/button_h_6"
                    android:layout_marginTop="@dimen/margin_1"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_h_5" />

            </LinearLayout>
        </LinearLayout>






    </LinearLayout>


</LinearLayout>