<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bright_blue"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp"
        android:layout_height="@dimen/top_bar_height">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/icon_menu" />
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_5"
        android:paddingRight="@dimen/margin_5"
        >

        <RelativeLayout
            android:layout_width="@dimen/menu_option_w"
            android:layout_height="@dimen/menu_option_h">

            <Button
                android:id="@+id/patient_info_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>
            
            <ImageView
                android:id="@+id/icon_pateint_info"
                android:layout_width="@dimen/menu_option_img_w"
                android:layout_height="@dimen/menu_option_img_h"
                android:background="@drawable/icon_patient_info"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_marginLeft="@dimen/margin_1"
                android:layout_toRightOf="@id/icon_pateint_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_info"
                android:textColor="@color/white"
                android:textSize="@dimen/text_h_3"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="@dimen/menu_option_w"
            android:layout_height="@dimen/menu_option_h">

            <Button
                android:id="@+id/detect_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>

            <ImageView
                android:id="@+id/icon_detect"
                android:layout_width="@dimen/menu_option_img_w"
                android:layout_height="@dimen/menu_option_img_h"
                android:background="@drawable/icon_detect"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_marginLeft="@dimen/margin_1"
                android:layout_toRightOf="@id/icon_detect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detect"
                android:textColor="@color/white"
                android:textSize="@dimen/text_h_3"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/menu_option_w"
            android:layout_height="@dimen/menu_option_h">

            <Button
                android:id="@+id/analytics_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>

            <ImageView
                android:id="@+id/icon_analytics"
                android:layout_width="@dimen/menu_option_img_w"
                android:layout_height="@dimen/menu_option_img_h"
                android:background="@drawable/icon_analytics"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_marginLeft="@dimen/margin_1"
                android:layout_toRightOf="@id/icon_analytics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/analytics"
                android:textColor="@color/white"
                android:textSize="@dimen/text_h_3"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/menu_option_w"
            android:layout_height="@dimen/menu_option_h">

            <Button
                android:id="@+id/solution_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>

            <ImageView
                android:id="@+id/icon_solution"
                android:layout_width="@dimen/menu_option_img_w"
                android:layout_height="@dimen/menu_option_img_h"
                android:background="@drawable/icon_solution"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_marginLeft="@dimen/margin_1"
                android:layout_toRightOf="@id/icon_solution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/solution"
                android:textColor="@color/white"
                android:textSize="@dimen/text_h_3"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="@dimen/menu_option_w"
            android:layout_height="@dimen/menu_option_h">

            <Button
                android:id="@+id/doctor_settings_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>

            <ImageView
                android:id="@+id/icon_settings"
                android:layout_width="@dimen/menu_option_img_w"
                android:layout_height="@dimen/menu_option_img_h"
                android:background="@drawable/icon_settings"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_marginLeft="@dimen/margin_1"
                android:layout_toRightOf="@id/icon_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/doctor_settings"
                android:textColor="@color/white"
                android:textSize="@dimen/text_h_3"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="@dimen/margin_3"
            android:layout_width="@dimen/menu_option_w"
            android:layout_height="@dimen/menu_option_h">

            <Button
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>

            <ImageView
                android:id="@+id/icon_logout"
                android:layout_width="@dimen/menu_option_img_w"
                android:layout_height="@dimen/menu_option_img_h"
                android:background="@drawable/icon_logout"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_marginLeft="@dimen/margin_1"
                android:layout_toRightOf="@id/icon_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/log_out"
                android:textColor="@color/white"
                android:textSize="@dimen/text_h_3"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>


