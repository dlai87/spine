<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/history_patient_list_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/patient_info_dialog_h"
        android:background="@drawable/grey_round_rect"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_1"
            android:layout_marginLeft="@dimen/margin_1"
            android:layout_marginRight="@dimen/margin_1"
            android:layout_marginTop="@dimen/margin_1">

            <com.linearlistview.LinearListView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/text_gray_dark"
                android:dividerPadding="2dp"
                android:entries="@array/patient_list"
                android:orientation="vertical"
                android:showDividers="middle"
                app:dividerThickness="2dp" />
        </ScrollView>

    </LinearLayout>

</LinearLayout>
